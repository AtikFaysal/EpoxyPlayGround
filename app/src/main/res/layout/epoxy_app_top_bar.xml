<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_10"
    android:paddingHorizontal="@dimen/padding_10"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.epoxy.playground.customview.CustomSemiBoldTV
        android:id="@+id/greetingsTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/regular_text_size"
        android:textColor="@color/primary_text_color"
        tools:text="Hi, Atik Faysal 👋🏿"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addMoneyTv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.epoxy.playground.customview.CustomSemiBoldTV
        android:id="@+id/addMoneyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_add_circle"
        android:drawablePadding="@dimen/padding_8"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/color_1D3A70"
        android:gravity="center_vertical"
        android:text="@string/action_add_money"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>